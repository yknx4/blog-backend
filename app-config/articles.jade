extends main
include mixins

block vars
    - var hasToolbar = true
block content
    div(ng-app='allcount', ng-controller='EntityViewController')
        +defaultToolbar()
        .container.screen-container(ng-cloak)
            +defaultList()
                .row(ng-repeat="item in items"): .col-xs-12
                    .panel.panel-default
                        .panel-heading
                            h3: a(href="#", ng-click="navigateTo(item.id)") {{item.title}} by {{item.user.name}}
                            div(ng-if="isInEditMode")
                                button.btn.btn-danger.btn-xs(lc-tooltip="Delete", ng-click="deleteEntity(item)"): i.glyphicon.glyphicon-trash
                        .panel-body
                            p(style="white-space: pre;") {{item.content}}
            +noEntries()
            +defaultEditAndCreateForms()

block js
    +entityJs()